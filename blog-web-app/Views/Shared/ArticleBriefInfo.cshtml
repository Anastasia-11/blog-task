@model Article

<div class="col-sm-6 col-md-4">
    <div class="card">
        <div class="card h-100">
            @if (Model.ImageData != null)
            {
                <img class="card-img-top" src="data:image/jpeg;base64,@(Convert.ToBase64String(Model.ImageData))" alt="...">
            }
            else
            {
                <img class="card-img-top" src="https://fomantic-ui.com/images/wireframe/image.png" alt="...">
            }
            <div class="card-body">
                <h3 class="card-title">@Model.Name</h3>
                <p class="card-text">@Model.ShortDescription</p>
                <p>
                    <a asp-controller="Article" asp-action="ArticleInfo" asp-route-id="@Model.Id" class="btn btn-dark" role="button">Читать статью</a>
                </p>
            </div>
        </div>
    </div>
</div>