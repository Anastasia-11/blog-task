@model IQueryable<Article>

<div class="nav-link text-dark"><h4>Список статей</h4></div>
<div class="text-danger" asp-validation-summary="ModelOnly"></div>

@if (!Model.Any())
{
    <li class="list-group-item">Статей нет</li>
}
else
{
    foreach (var article in Model)
    {
        <ul class="list-group list-group-flush">
            <li class="list-group-item">
                @article.Name
                <form asp-route-id="@article.Id" asp-controller="Admin" asp-action="Delete" method="post">
                    <a class="btn btn-sm btn-primary" asp-route-id="@article.Id" asp-controller="Admin" asp-action="Edit">Редактировать</a>
                    <button type="submit" class="btn btn-sm btn-danger">Удалить</button>
                </form>
            </li>
        </ul>
    }
}
<a class="btn btn-sm btn-primary" asp-controller="Admin" asp-action="Create">Создать статью</a>