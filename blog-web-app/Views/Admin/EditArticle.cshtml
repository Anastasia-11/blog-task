@model blog_web_app.ViewModels.ArticleViewModel

<div class="nav-link text-dark"><h4>Редактирование статьи</h4></div>
<div asp-validation-summary="All" class="text-danger"></div>
<form method="post" asp-controller="Admin" asp-action="EditArticle" enctype="multipart/form-data">
    <div class="form-group">
        <input type="hidden" asp-for="Article.Id" />
    </div>
    <div class="form-group">
        <label asp-for="Article.Name" class="control-label">Имя</label>
        <input type="text" asp-for="Article.Name" class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="Article.ShortDescription" class="control-label">Краткое описание</label>
        <input type="text" asp-for="Article.ShortDescription" class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="Article.Description" class="control-label">Описание</label>
        <input type="text" asp-for="Article.Description" class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="Article.CategoryId" class="control-label">Выберите категорию:</label>
        <select asp-for="Article.CategoryId" class="form-control">
            @foreach (var category in Model.Categories)
            {
                <option value="@category.Id">@category.Name</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label  class="control-label">Изображение</label>
        <br>
        @if (Model?.Article.ImageData != null)
        {
            <img style='width:500px;' src="data:image/jpeg;base64,@(Convert.ToBase64String(Model.Article.ImageData))" alt="image"/>
        }
        <input type="file" name="image" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Сохранить</button>
    <button asp-action="DeleteArticle" asp-route-id="@Model.Article.Id" class="btn btn-danger">Удалить</button>
    <a asp-action="Articles" class="btn btn-secondary">Отмена</a>
</form>